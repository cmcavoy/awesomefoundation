<% form_for @chapter do |f| %>
<ul>

<li class="input">
<%= f.label :name %>
<%= f.text_field :name %>
</li>

<li class="input">
<%= f.label :slug %>
<%= f.text_field :slug %>
</li>

<li class="input">
<%= f.label :submission_form_url, "Alternate Submission Form URL" %>
<%= f.text_field :submission_form_url %>
</li>

<li class="input">
<%= f.label :body, "Page Body" %>
<%= f.text_area :body, :class => "pagebody" %>
</li>

<li class="button">
<%= f.submit "Save" %>
</li>

</ul>
<% end %>
